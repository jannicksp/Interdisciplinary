@{
    ViewData["Title"] = "Spin the Wheel";
}
<h1>@ViewData["Title"]</h1>


<h1>Who drinks?</h1>
<p id="list" style="font-size: 15px; font-weight: bold;">
</p>

<label for="players">Add more players?</label>
<input id="players"/>
<button  type="submit">Add</button>
<br />

<button class="button" id="button" onclick="randomName()">Spin the Wheel</button>

<p id="drink" style="font-size: 24px; font-weight: bold; color: #D56868;">
</p>


<script src="~/js/random.js" asp-append-version="true"></script>
